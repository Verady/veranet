{
  "name": "@verady/veranet",
  "version": "2.0.0",
  "description": "veranet protocol implementation and network daemon",
  "main": "index.js",
  "bin": {
    "veranet": "bin/veranet.js"
  },
  "directories": {
    "test": "test",
    "lib": "lib",
    "doc": "doc"
  },
  "scripts": {
    "test": "npm run unit-tests && npm run e2e-tests && npm run linter",
    "unit-tests": "mocha --exit test/*.unit.js",
    "e2e-tests": "mocha --exit test/*.e2e.js",
    "coverage": "istanbul cover _mocha -- --exit --recursive",
    "linter": "eslint ./index.js ./lib ./test",
    "generate-docs": "mkdir -p ./jsdoc && rm -r ./jsdoc && jsdoc lib -r -R README.md -u ./doc -c .jsdoc.json --verbose -d ./jsdoc",
    "publish-docs": "gh-pages -d jsdoc --repo git@github.com:verady/veranet.git"
  },
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/verady/veranet.git"
  },
  "author": "Gordon Hall <gordonh@member.fsf.org>",
  "contributors": [],
  "license": "AGPL-3.0",
  "engines": {
    "node": "^8.11.3"
  },
  "dependencies": {
    "@kadenceproject/kadence": "^4.1.1",
    "boscar": "^2.0.0",
    "bunyan": "^1.8.12",
    "bunyan-rotating-file-stream": "^1.6.3",
    "commander": "^2.9.0",
    "daemon": "^1.1.0",
    "encoding-down": "^4.0.0",
    "ip": "^1.1.5",
    "leveldown": "^3.0.0",
    "levelup": "^2.0.1",
    "merge": "^1.2.0",
    "mkdirp": "^0.5.1",
    "npid": "^0.4.0",
    "pem": "^1.9.7",
    "rc": "^1.2.8",
    "semver": "^5.1.0"
  },
  "devDependencies": {
    "chai": "^2.2.0",
    "coveralls": "^3.0.2",
    "eslint": "^3.14.0",
    "gh-pages": "^0.9.0",
    "ink-docstrap": "github:bookchin/docstrap",
    "istanbul": "^1.1.0-alpha.1",
    "jsdoc": "^3.4.0",
    "memdown": "^2.0.0",
    "mocha": "^5.2.0",
    "rimraf": "^2.6.1",
    "sinon": "^2.4.1"
  }
}
